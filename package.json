{
    "name": "mazmorra",
    "version": "0.1.0",
    "description": "An awesome dungeon game",
    "repository": "https://github.com/davidMcneil/mazmorra",
    "author": "mcneil",
    "license": "MIT",
    "browser": true,
    "browserslist": "defaults",
    "scripts": {
        "dev": "NODE_ENV=development parcel ./src/index.html",
        "build": "NODE_ENV=production yarn clean && parcel build ./src/index.html",
        "check-format": "prettier --check 'src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "clean": "rm -rf ./dist",
        "size": "du -sh dist/* && du -sh dist/"
    },
    "devDependencies": {
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.17.1",
        "typescript": "^3.4.5"
    },
    "dependencies": {
        "assets": "^3.0.1",
        "phaser": "^3.17.0"
    }
}
